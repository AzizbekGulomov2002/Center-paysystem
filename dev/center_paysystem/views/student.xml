<odoo>
    <record id="view_student_tree" model="ir.ui.view">
        <field name="name">center_paysystem.student.tree</field>
        <field name="model">center_paysystem.student</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="date_of_birth"/>
            </tree>
        </field>
    </record>

    <record id="view_student_form" model="ir.ui.view">
        <field name="name">center_paysystem.student.form</field>
        <field name="model">center_paysystem.student</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="name"/>
                    <field name="date_of_birth"/>
                    <field name="group_ids"/>
                    <field name="payment_ids"/>
                </group>
            </form>
        </field>
    </record>

    <!-- To'g'ri ID orqali action student kiritildi -->
    <record id="action_student" model="ir.actions.act_window">
        <field name="name">Students</field>
        <field name="res_model">center_paysystem.student</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>
